<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="PWM"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_freq"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="8000HZ"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/seekBar_freq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="25000"
                    android:progress="8000" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pwm"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/seekBar_pwm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50" />

            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="GPIO"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/front_rotate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="front" />

                <Button
                    android:id="@+id/back_rotate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="back" />

                <Button
                    android:id="@+id/detected_people"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="detected" />


            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="SPI"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_rainb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="rainb" />

                <Button
                    android:id="@+id/btn_random"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="random" />
            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="UART"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PM2.5:"
                android:textSize="20sp" />

            <Button

                android:id="@+id/smoke"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="smoke" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="I2C"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button

                android:id="@+id/btn_1206"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="1602Screen" />

            <Button

                android:id="@+id/btn_clear"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Release" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>