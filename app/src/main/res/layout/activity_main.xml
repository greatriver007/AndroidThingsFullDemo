<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="PWM"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_freq"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="8000HZ"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/seekBar_freq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="25000"
            android:progress="8000" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pwm"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/seekBar_pwm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />

    </LinearLayout>

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="GPIO"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/front_rotate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="front"
            />
        <Button
            android:id="@+id/back_rotate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="back"
            />
        <Button
            android:id="@+id/detected_people"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="detected"
            />


    </LinearLayout>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="SPI"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_rainb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="rainb"
            />
        <Button
            android:id="@+id/btn_random"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="random"
            />
    </LinearLayout>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="UART"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="PM2.5:"
       />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/smoke"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="smoke"
        />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="I2C"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="18sp" />
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_1206"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="1602Screen"
        />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_clear"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Release"
        />


</LinearLayout>
